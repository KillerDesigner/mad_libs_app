<link href='http://fonts.googleapis.com/css?family=The+Girl+Next+Door' rel='stylesheet' type='text/css'>
<div id="container">
<h1>Mad Libs!</h1>
	<div id="da_form">
	<%= form_for(@mad_lib, remote: true) do |f| %>
		<div class="fields">
		<%= f.label :noun %>
		<%= f.text_field :noun, placeholder: :noun, autofocus: true, required: true %><br>
		<%= f.label :proper_noun %>
		<%= f.text_field :proper_noun, placeholder: "proper noun", required: true %><br>
		<%= f.label :adjective %>
		<%= f.text_field :adjective, placeholder: "adjective", required: true %><br>
		<%= f.label :verb %> (past tense!)
		<%= f.text_field :verb, placeholder: "verb", required: true %>
		</div>
		<%#= f.submit %>
		<button type="submit" class="css3button">make mad lib</button>
	<% end %>
	</div>

<!-- list of all madlibs -->
<!--   t.string   "verb"
    t.string   "noun"
    t.string   "adjective"
    t.string   "proper_noun" -->
	<div id="madlibs">
		<% @mad_libs = @mad_libs.reverse %>
		<% @mad_libs.each do |mad_lib| %>
		
	</li>
	  	<%= render "mad_lib", :mad_lib => mad_lib %>
		<%#= render m, :madlib => m %>		
		<% end %>
	</div>
</div>