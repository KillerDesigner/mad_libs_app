<div id="container">
<h1>Mad Libs!</h1>
	<div id="da_form">
	<%= form_for(@mad_lib, remote: true) do |f| %>
		<div class="fields_left">
		<%= f.label :noun %>
		<%= f.text_field :noun, placeholder: "noun" %><br>
		<%= f.label :proper_noun %>
		<%= f.text_field :proper_noun, placeholder: "proper noun" %>
		</div>
		<div class="fields_right">
		<%= f.label :adjective %>
		<%= f.text_field :adjective, placeholder: "adjective" %><br>
		<%= f.label :verb %> (past tense!)
		<%= f.text_field :verb, placeholder: "verb" %>
		</div>
		<%= f.submit %>
	<% end %>
	</div>

<!-- list of all madlibs -->
<!--   t.string   "verb"
